<div class="form-group">
	<%= simple_form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cliente_id %>
  <%= f.input :fechaPedido %>
  <%= f.input :descripcion %>
  <%= f.input :usuario %>
</div>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cliente_pedidos_path(@cliente), :class => 'btn' %>
  </div>

<% end %>
